pipeline{
    agent any
    stages{
        stage('username_password'){
            steps {
                    withCredentials([usernamePassword(credentialsId: 'vsowmya26_itd', usernameVariable: 'USERNAME', passwordVariable: 'PASSOWRD')])
                    echo "$USERNAME $PASSWORD"
                     }
                }
        stage('SSH_PEM'){
            steps {
                    withCredentials([sshUserPrivateKey(credentialsId: 'ubuntu', usernameVariable: 'SSHUSER', ssh_pemkeyVariable: 'KEY')])
                    echo "$SSHUSER $KEY"
                     }
                }
        stage('SECRET_TEXT'){
            steps {
                    withCredentials([string(credentialsId: 'secrect_text', variable: 'SECRET_TEXT')])
                    echo "$SECRET_TEXT"
                     }
                }
        stage('SECRET_FILE'){
            steps {
                    withCredentials([secrect_file(credentialsId: 'secrect_file', variable: 'SECRET_FILE')])
                    echo "$SECRET_FILE"
                     }
                }                                 
        }
}


